---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';


const books = await getCollection('proyects')
---

<Layout title="Proyects">
   <main class="grid gap-3.5 px-10">
    <section>
      <div class="bg-red-300 text-black p-20 rounded-2xl">
        <h1 class="text-4xl font-bold">
          Hi, my name is Mauricio
        </h1>
      </div>  
    </section>

    <section>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {books.map((book)=>{
        const {data} =book
        const {title,date,description} = data
        return (
        <div class="border-2 p-10 rounded-2xl hover:scale-105 duration-105">
          <h1>{title}</h1>
          <spa>{date}</spa>
          <p>{description}</p>
        </div>
        )
        })}
      </div>
    </section>

  </main>
</Layout>
